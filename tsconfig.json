{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts", "src/template/forget.tsx",
  ],
  "exclude": [
    "node_modules",
  ]
}
